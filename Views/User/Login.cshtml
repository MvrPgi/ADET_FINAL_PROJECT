@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page - ADET_FINAL_PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ADET_FINAL_PROJECT.styles.css" asp-append-version="true" />
</head>

<header>
    <link href="/css/style.css" rel="stylesheet" />
</header>

<div class="row justify-content-center">
    <div class="text-center p-1" style="font-family: 'Caveat', cursive;">
        <img src="~/assets/logo-green.png" alt="BuLAKLAK Logo" style="height: auto; width: 300px;" />
        <h4>Flowers and Alcohols to Celebrate or to Contemplate</h4>
    </div>
    <div class="col-md-4 rounded-3 m-5 px-4 py-2" style="background-color: #2D4F2B;">
        <h2 class="text-center mb-4" style="color: #FFB823;">Login</h2>

        <form asp-controller="User" asp-action="Login" method="post">
            <div class="form-group pt-4">
                <input type="text" class="form-control  rounded-pill" id="Username" name="Username" placeholder="Username" required />
            </div>

            <div class="form-group pt-4">
                <input type="password" class="form-control  rounded-pill" id="Password" name="Password" placeholder="Password" required />
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                <label class="form-check-label text-white" for="RememberMe">Remember Me</label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-block rounded-pill" style="width: 200px; background-color: #FFB823; color: white; font-weight: bold;">Login</button>
            </div>


            <div class="text-center mt-3">
                <p class="text-white">Don't have an account? <a asp-area="" asp-controller="User" asp-action="Register">Create Account</a></p>
            </div>
        </form>
    </div>
</div>