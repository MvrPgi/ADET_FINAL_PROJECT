@{
    ViewData["Title"] = "Add New Item";
}

@model ADET_FINAL_PROJECT.Models.AddItemViewModel

<div class="container pt-3 pb-4 justify-content-center" style="width: 100%;">
    <h2 class="mb-4" style="font-family: 'Caveat', cursive;">Add Item</h2>

    <div class="container pt-3 pb-4" style="max-width: 800px">
        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Item" asp-action="Add" class="btn btn-danger rounded-pill fw-bold">Cancel Add Item</a>
        </div>
        <form method="post" class="text-center">
            <div class="mb-3">
                <label class="form-label fw-semibold">Name</label>
                <input class="form-control rounded-pill" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                <select class="form-select rounded-pill" required asp-for="Category">
                    <option value="" disabled>Select Category</option>
                    <option value="Flower">Flower</option>
                    <option value="Alcohol">Alcohol</option>
                    <option value="Flower & Alcohol">Flower & Alcohol</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <input class="form-control rounded-pill" asp-for="Description" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Quantity</label>
                <input class="form-control rounded-pill" type="number" asp-for="Quantity" />
            </div>

            <div class="d-flex gap-3 mb-3">
                <button type="submit" class="btn btn-success flex-fill rounded-pill fw-bold">Confirm</button>
                <a asp-controller="Item" asp-action="Inventory" class="btn btn-danger flex-fill rounded-pill fw-bold">Cancel</a>
            </div>

            <a asp-controller="Item" asp-action="Inventory" class="btn btn-success w-100 rounded-pill fw-bold text-white" style="text-decoration: none;">
                Confirm & Close
            </a>
        </form>
    </div>

</div>
</div>