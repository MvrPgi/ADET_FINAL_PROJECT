@{
    ViewData["Title"] = "Inventory";
}

@model List<ADET_FINAL_PROJECT.Models.Entities.Item>

    <!-- Main Content -->
    <div class="container pt-3 pb-4" style="min-height: 100vh;">
        <h2 class="mb-4" style="font-family: 'Caveat', cursive;">Inventory</h2>

    <table class="table table-hover text-center table-bordered custom-table">
        <thead class="table-light">
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.CreatedAt</td>
                        <td class="fw-bold"
                            style="color: @(item.Status == "High" ? "green" : item.Status == "Medium" ? "orange" : "red")">
                            @item.Status
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
