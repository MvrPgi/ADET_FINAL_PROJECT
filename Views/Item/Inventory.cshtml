@{
    ViewData["Title"] = "Inventory";
}

@model List<ADET_FINAL_PROJECT.Models.Entities.Item>


<header>
    <link href="/css/style.css" rel="stylesheet" />
</header>

<div class="row" style="background-color: #708A58;">
    <p class="text-end pe-4 pt-2 text-white">User</p>
</div>

<div class="d-flex">
    <div class="text-white p-3 vh-100 sidebar" style="width: 220px;">
        <h4 class="text-light">LOGO HERE</h4>
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Inventory">Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Add">Add Item</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Edit">Edit Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Delete">Delete Item</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container pt-3 pb-4" style="min-height: 100vh;">
        <h2 class="mb-4" style="font-family: 'Caveat', cursive;">Inventory</h2>

        <table class="table table-hover table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.Status</td>
                    </tr>
                }
        </table>
    </div>
</div>
