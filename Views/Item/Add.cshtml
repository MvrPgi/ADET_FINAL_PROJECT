@{
    ViewData["Title"] = "Add Item";
    var names = ViewBag.ItemNames as List<string> ?? new List<string>();
}

@model ADET_FINAL_PROJECT.Models.AddItemViewModel

<div class="container pt-3 pb-4 justify-content-center" style="width: 100%;">
    <h2 class="mb-4" style="font-family: 'Caveat', cursive;">Add Item</h2>

    <div class="container pt-3 pb-4" style="max-width: 800px">
        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="Item" asp-action="NewAdd" class="btn btn-success rounded-pill fw-bold">Add New Item</a>
        </div>
        <form method="post" class="text-center">
            <div class="mb-3">
                <label class="form-label fw-semibold" style="font-weight:bold;">Name</label>
                <select asp-for="Name" class="form-select rounded-pill text-center" required>
                    <option value="" selected disabled>Select Name</option>
                    @foreach (var name in (List<string>)ViewBag.ItemNames)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold" style="font-weight:bold;">Category</label>
                <select asp-for="Category" class="form-select rounded-pill text-center" required>
                    <option value=""  selected disabled>Select Category</option>
                    <option value="Flower">Flower</option>
                    <option value="Alcohol">Alcohol</option>
                    <option value="Flower & Alcohol">Flower & Alcohol</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold" style="font-weight:bold;">Description</label>
                <input asp-for="Description" class="form-control rounded-pill text-center" type="text" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold" style="font-weight:bold;">Quantity</label>
                <input asp-for="Quantity" class="form-control rounded-pill text-center" type="number" />
            </div>

            <div class="d-flex gap-3 mb-3">
                <button type="submit" class="btn btn-success flex-fill rounded-pill fw-bold">Confirm</button>
                <a asp-controller="Item" asp-action="Inventory" class="btn btn-danger flex-fill rounded-pill fw-bold">Cancel</a>
            </div>
        </form>
    </div>

</div>