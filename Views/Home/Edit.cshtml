@{
    ViewData["Title"] = "Edit";
}

    <!-- Main Content -->
    <div class="container pt-3 pb-4" style="min-height: 100vh;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0" style="font-family: 'Caveat', cursive;">Edit Item</h2>
            <div class="d-flex gap-2" style="">
                <button type="submit" class="btn btn-success rounded-pill fw-bold">Confirm</button>
                <a asp-controller="Home" asp-action="Inventory" class="btn btn-danger rounded-pill fw-bold">Cancel</a>
            </div>
        </div>

        <table class="table table-hover table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Item ID</td>
                    <td>Name</td>
                    <td>Category</td>
                    <td>Description</td>
                    <td>Quantity</td>
                    <td>Status</td>
                </tr>
        </table>
    </div>
