@{
    ViewData["Title"] = "Edit";
}

<header>
    <link href="/css/style.css" rel="stylesheet" />
</header>

<div class="row" style="background-color: #708A58;">
    <p class="text-end pe-4 pt-2 text-white">User</p>
</div>

<div class="d-flex">
    <div class="text-white p-3 vh-100 sidebar" style="width: 220px;">
        <h4 class="text-light">LOGO HERE</h4>
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Inventory">Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Add">Add Item</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Edit">Edit Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Delete">Delete Item</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container pt-3 pb-4" style="min-height: 100vh;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0" style="font-family: 'Caveat', cursive;">Edit Item</h2>
            <div class="d-flex gap-2" style="">
                <button type="submit" class="btn btn-success rounded-pill fw-bold">Confirm</button>
                <a asp-controller="Home" asp-action="Inventory" class="btn btn-danger rounded-pill fw-bold">Cancel</a>
            </div>
        </div>

        <table class="table table-hover table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Item ID</td>
                    <td>Name</td>
                    <td>Category</td>
                    <td>Description</td>
                    <td>Quantity</td>
                    <td>Status</td>
                </tr>
        </table>
    </div>
</div>
