@{
    ViewData["Title"] = "Add";
}
<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<div class="row" style="background-color: #708A58;">
    <p class="text-end pe-4 pt-2 text-white">User</p>
</div>

<div class="d-flex">
    <div class="text-white p-3 vh-100 sidebar" style="width: 220px;">
        <h4 class="text-light">LOGO HERE</h4>
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Inventory">Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Add">Add Item</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Edit">Edit Inventory</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Delete">Delete Item</a>
            </li>
        </ul>
    </div>

    <div class="container pt-3 pb-4 justify-content-center" style="width: 100%;">
        <h2 class="mb-4" style="font-family: 'Caveat', cursive;">Add Item</h2>

        <div class="container pt-3 pb-4" style="max-width: 800px">
            <form method="post" class="text-center" >
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input class="form-control rounded-pill" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Category</label>
                    <input class="form-control rounded-pill" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <input class="form-control rounded-pill" />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Quantity</label>
                    <input class="form-control rounded-pill" type="number" />
                </div>

                <div class="d-flex gap-3 mb-3">
                    <button type="submit" class="btn btn-success flex-fill rounded-pill fw-bold">Confirm</button>
                    <a asp-controller="Home" asp-action="Inventory" class="btn btn-danger flex-fill rounded-pill fw-bold">Cancel</a>
                </div>

                <button type="submit" name="close" value="true" class="btn btn-success w-100 rounded-pill fw-bold">
                    Confirm & Close
                </button>
            </form>
        </div>
        
    </div>
</div>